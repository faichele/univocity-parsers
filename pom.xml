			<email>jbax@univocity.com</email>
			<timezone>+9:30</timezone>
		</developer>

		<developer>
			<id>parsers</id>
			<name>univocity parser development team</name>
			<email>parsers@univocity.com</email>
		</developer>

		<developer>
			<id>faichele</id>
			<name>Fabian Aichele</name>
			<email>fabian.aichele@ganymedanalytics.de</email>
